<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Size:</strong>
<% @product.sizes.each do |size| %>
    <%= size.name %>
  <% end %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@product.image, width:"200px", height:"auto") %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user.try(:name) %>
</p>

<p>
  <strong>Category:</strong>
  <% @product.categories.each do |category| %>
    <%= category.name %>
  <% end %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
