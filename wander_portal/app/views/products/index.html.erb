


<div class="row">

  <div class="large-4 small-12 columns">

<!--   <div class="hide-for-small panel">

    </div> -->

   
      <h3>All Products</h3>
      <h5 class="subheader" id="all-products-summary">View all your products then manage them instantly with the Wander Portal.
      </h5>
    

    <a href="#">
     <div class="panel callout radius" id="add-prod-button" >

       <h6><%= link_to 'Add New Product', new_product_path %></h6>
     </div>
   </a>
 </div>


 <div class="large-8 columns">
  <% @products.each do |product| %>
  <div class="row">

    <div class="large-4 small-6 columns">
      <%= image_tag(product.image, width:"200px", height:"auto") %>

      <div class="panel" id="panel">
        <h5 class="all-prod-title" ><%= product.title %></h5>
        <h6 class="all-prod-seller" >Brand: <%= product.user.try(:name) %></h6>
        <td><%= link_to 'Show |', product %></td>
        <td><%= link_to 'Edit |', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    </div>

  </div>
</div>
<% end %>


</div>




</div>
</div>



