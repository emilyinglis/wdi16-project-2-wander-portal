<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder => "'Flora Dress'", :id => "placeholder_text" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :placeholder => "'A wardrobe staple...'", :id => "placeholder_text" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, :placeholder => "'20.00'", :id => "placeholder_text" %>
  </div>

  <div class="field">
    <%= f.label :category %><br>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :sizes %><br>
    <%= f.collection_check_boxes :size_ids, Size.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_area :image, :placeholder => "'http://img...'", :id => "placeholder_text" %>
  </div>
<!--   <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div> -->
  <div class="actions" id="button">
    <%= f.submit %>
  </div>
<% end %>


